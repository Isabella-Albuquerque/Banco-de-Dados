create database db_recursoshumanos;

CREATE TABLE colaboradores (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(100),
    sexo VARCHAR(20),
    cargo VARCHAR(50),
    salario DECIMAL(10, 2),
    departamento VARCHAR(50)
);
